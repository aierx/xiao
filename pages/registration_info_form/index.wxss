/* pages/registration_info_form/index.wxss */
.section {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0rpx;
  color: #333;
 }
 .section__title{
  font-size: 40rpx;
  margin: 10rpx 0rpx;
 }
 .form_item {
  border-bottom: rgb(230, 230, 230) 1px solid;
  margin: 15rpx;
  display: flex;
  align-items: center;
  height: 100rpx;
 }
 .form_item_content {
  margin:10rpx 0;
  display: inline-block;
  margin-right: 10rpx;
  width: 550rpx;
 }
 .form_item_text {
  font-weight: 600;
  font-size: 14px;
  display: inline-block;
  width: 200rpx;
 }
 .delete_button {
  background-color: rgb(255, 0, 0);
  color: white;
  float: right;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  margin-right: 20rpx;
  margin-top: 10rpx;
 }