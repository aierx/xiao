<!--pages/registration_info_form/index.wxml-->
<view class="container" style="font-family: 微软雅黑;">
  <view style="width: 700rpx;height: 200rpx;border-radius: 20rpx;background-color: white;margin-top: 20rpx;">
    <view style="width: 600rpx;display: inline-block;margin-top: 20rpx;margin-left: 20rpx;">
      <text style="display: block;font-size: 18px;">团队报名</text>
      <view style="margin-top: 20rpx;">
        <text style="display: block;font-size: 12px;color: rgb(165, 165, 165);">报名时间：2023年03月26日 17：00 截止</text>
        <text style="display: block;font-size: 12px;color: rgb(165, 165, 165);">报名费用：150.00/人</text>
        <text style="display: block;font-size: 12px;color: rgb(165, 165, 165);">报名方式：需抽签</text>
      </view>
    </view>
  </view>
  <form bindsubmit="toSubmit">
    <view style="width: 700rpx;height: 750rpx;border-radius: 20rpx;background-color: white;margin-top: 20rpx;padding-top: 10rpx;" wx:for="{{formData}}" wx:key="id">
      <button hidden="{{!(personNum>1)}}" class="mini-btn" type="warn" size="mini" style="background-color: rgb(230,67,64);color: white;float: right;right: 10rpx;" data-id="{{index}}" bindtap="deleteFormItem">删除</button>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">真实姓名</view>
        <view style="margin:10rpx 0;">
          <view>
            <input placeholder="请输入" name="{{item.usrename}}" />
          </view>
        </view>
      </view>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">性别</view>
        <view style="margin:10rpx 0;">
          <view>
            <picker mode="selector" data-id="{{index}}" bindchange="bindPickerChange" value="{{item.sexIndex}}" range="{{array}}" name="{{item.sex}}">
              <view class="picker">
                {{array[item.sexIndex]}}
              </view>
            </picker>
          </view>
        </view>
      </view>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">出生日期</view>
        <view style="margin:10rpx 0;">
          <view>
            <picker mode="date" value="{{item.dateInfo}}" data-id="{{index}}" start="1900-01-01" end="2023-01-01" bindchange="bindDateChange" name="{{item.date}}">
              <view class="picker">
                {{item.dateInfo}}
              </view>
            </picker>
          </view>
        </view>
      </view>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">手机号码</view>
        <view style="margin:10rpx 0;">
          <view>
            <input placeholder="请输入" name="{{item.phone}}" />
          </view>
        </view>
      </view>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">证件类型</view>
        <view style="margin:10rpx 0;">
          <view>
            <picker mode="selector" bindchange="bindPickerChange" value="{{cardIndex}}" range="{{card}}" name="{{item.cardType}}">
              <view class="picker">
                {{card[0]}}
              </view>
            </picker>
          </view>
        </view>
      </view>
      <view style="border-bottom: rgb(230, 230, 230) 1px solid;margin: 15rpx;">
        <view style="font-weight: 600;font-size: 14px;">证件号码</view>
        <view style="margin:10rpx 0;">
          <view>
            <input placeholder="请输入" name="{{item.cardCode}}" />
          </view>
        </view>
      </view>
    </view>
    <view style="width: 700rpx;margin-top: 20rpx;display: flex;align-items: center;justify-content: center;">
      <view style="width: 600rpx;height: 100rpx;border: rgb(255, 119, 28) 1px dashed;border-radius: 40rpx;color: rgb(255, 119, 28);display: flex;align-items: center;justify-content: center;" bindtap="addVisitor">
        <text>+ 添加游客（最多五个）</text>
      </view>
    </view>
    <view style="margin-top: 20rpx;margin-bottom: 80rpx;">
      <button style="background-color: rgb(75, 100, 240);color: white;" form-type="submit">提交</button>
    </view>
  </form>
</view>